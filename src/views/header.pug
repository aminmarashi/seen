|<header class="mdl-layout__header">
|    <div class="mdl-layout__header-row">
|        <!-- Title -->
|        <span class="mdl-layout-title mdl-layout--large-screen-only"><a style="margin-right: 15px; text-decoration:none" href="/">Seen</a></span>
|        <!-- Navigation -->
|        <nav class="mdl-navigation">
if user
    a(class="mdl-navigation__link mdl-layout--large-screen-only" href="/create") Create
    a(class="mdl-navigation__link mdl-layout--large-screen-only" href="/track") Track
|        </nav>
- var icon = 'data:image/png;base64,'
if receipts
    span(class="mdl-chip" style="margin-left: 80px; max-width: 40%; overflow: hidden")
        if receipt
            span(class="mdl-chip__text" id="receipt-name")= receipt.name
        else
            span(class="mdl-chip__text" id="receipt-name") Select a pixel...
        ul(class="mdl-menu mdl-menu--bottom-left mdl-js-menu mdl-js-ripple-effect" for="receipt-name")
            each r in receipts
                a(href=`/track/${r.id}`)
                    li(class="mdl-menu__item")
                        span= r.name
        if receipt
            span(class="mdl-chip__text mdl-layout--small-screen-only" style="margin-left: 10px")
                span(style="user-select: none") | Select: 
                span(style=`position: relative; padding: 10px; background-repeat: no-repeat; background-position: 2px; background-size: 15px 20px; background-image: url("${icon}")`)
                    |&nbsp;&nbsp;&nbsp;&nbsp;
                    img(class="invisible-pixel" src=`/${receipt.id}.png`)
                    |&nbsp;&nbsp;&nbsp;&nbsp;
            button(onclick=`copyToClipboard(${receipt.id})` class="mdl-button mdl-layout--large-screen-only") Copy
    if receipt
        span(class="mdl-chip mdl-layout--large-screen-only" style="pointer-events: none; margin: 0px 80px 0px 20px;") 
            span(class="mdl-chip__text" style="user-select: none; margin-right: 10px") Or, select and copy the pixel
            span(class="mdl-chip__text" style=`position: relative; width: 20px; height: 20px; background-repeat: no-repeat; background-position: 2px; background-size: 15px 20px; background-image: url("${icon}")`)
                img(class="invisible-pixel" src=`/${receipt.id}.png`)
div(class="mdl-layout-spacer mdl-layout--large-screen-only")
nav(class="mdl-navigation" style="position: fixed; right: 55px")
    if user
        button(class="mdl-button mdl-js-button mdl-button--raised mdl-button--fab" id="profile-menu")
            img(style="border-radius: 50%; width: 55px" src=`${user.picture}`)/
        ul(class="mdl-menu mdl-menu--bottom-right mdl-js-menu mdl-js-ripple-effect" for="profile-menu")
            li(class="mdl-menu__item")= user.nickname
            a(href="/logout")
                li(class="mdl-menu__item") Logout
    else
        a(href="/login" class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored") Login
|</header>
