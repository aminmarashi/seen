|        <nav class="mdl-navigation">
if user
    a(class="mdl-navigation__link mdl-layout--large-screen-only" href="/create") Create
    a(class="mdl-navigation__link mdl-layout--large-screen-only" href="/track") Track
|        </nav>
if receipt
    span(class="mdl-chip" style="margin: 0px 80px 0px 80px; max-width: 30%; overflow: hidden")
        span(class="mdl-chip__text" id="receipt-name")= receipt.name
        ul(class="mdl-menu mdl-menu--bottom-left mdl-js-menu mdl-js-ripple-effect" for="receipt-name")
            each r in receipts
                a(href=`/track/${r.id}`)
                    li(class="mdl-menu__item")
                        span= r.name
        button(onclick=`copyToClipboard(${receipt.id})` class="mdl-button") Copy
div(class="mdl-layout-spacer mdl-layout--large-screen-only")
nav(class="mdl-navigation" style="position: fixed; right: 55px")
    if user
        button(class="mdl-button mdl-js-button mdl-button--raised mdl-button--fab" id="profile-menu")
            img(style="border-radius: 50%; width: 55px" src=`${user.picture}`)/
        ul(class="mdl-menu mdl-menu--bottom-right mdl-js-menu mdl-js-ripple-effect" for="profile-menu")
            li(class="mdl-menu__item")= user.nickname
            a(href="/logout")
                li(class="mdl-menu__item") Logout
    else
        a(href="/login" class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored") Login
|</header>
