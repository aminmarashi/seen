- var icon = 'data:image/png;base64,'
if receipt
    div(class="uk-margin")
        div(class="uk-grid uk-text-center" uk-grid)
            div(class="uk-width-1-3@xl uk-width-1-4@l uk-width-1-6@m")
            div(class="uk-width-expand uk-position-relative")
                div(class="uk-position-absolute" style="width: calc(100% - 40px); height: 100%; background: rgba(0,0,0,0); z-index: 1000")
                    span(style="position: absolute; top: 2.7rem; right: 3rem; width 5rem; color: rgba(0,0,0,0)")
                        |&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        img(src=`/${receipt.id}.png`)
                        |&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                div(class="uk-card uk-card-default uk-card-body")
                    span(class="uk-visible@s")
                        button(class="uk-button uk-button-default uk-margin-right uk-position-relative" onclick=`copyToClipboard(${receipt.id})` style="margin-left: 1rem; z-index: 1000" ) Copy
                        span(class="uk-margin-right") or copy the box manually:
                    span(class="uk-hidden@s uk-margin-right") Select and copy the box:
                    span(style=`padding: 15px 30px 15px 30px; position: absolute; right: 3rem; border: 1px dashed; background-repeat: no-repeat; background-position: 20px; background-size: 15px 20px; background-image: url("${icon}")`)
            div(class="uk-width-1-3@xl uk-width-1-4@l uk-width-1-6@m")
