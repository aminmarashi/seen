- var icon = 'data:image/png;base64,'
if receipt
    div(class="uk-margin" style="user-select: none")
        div(class="uk-grid" uk-grid)
            div(class="uk-width-1-3@xl uk-width-1-4@l uk-width-1-6@m")
            div(class="uk-width-expand")

                div(class="uk-card uk-card-default uk-card-body")
                    button(class="uk-button uk-button-default uk-margin-right" onclick=`copyToClipboard(${receipt.id})` style="margin-left: 1rem" ) Copy
                    span(class="uk-margin-right") or use: 
                    span(style="position: relative; padding: 15px 30px 15px 30px")
                        span(style=`padding: 15px 30px 15px 30px; position: absolute; left: 0px; border: 1px dashed; background-repeat: no-repeat; background-position: 20px; background-size: 15px 20px; background-image: url("${icon}")`)
                        span(style="user-select: all; position: absolute; left: 0px; width: 5rem")
                            - let count = 8;
                            while --count > 0
                                img(style="margin-top: 30px; margin-right: 0.5rem" src=`/${receipt.id}.png`)
            div(class="uk-width-1-3@xl uk-width-1-4@l uk-width-1-6@m")
